<p id="notice"><%= notice %></p>

<p>
  <h3>Name:</h3>
  <%= @post.name %>
</p>

<p>
  <h3>tags:</h3>
  <ul>
    <% @post.tags.each do |tag| %>
      <li>
        <%= link_to tag.name, tag_path(tag) %>
      </li>
    <% end %>
  </ul>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
